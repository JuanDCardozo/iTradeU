<!doctype html>
<html>
<head>
    <title>iTradeU</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; word-wrap:break-word; }
        .well_one {
          min-height: 20px;
          padding: 19px;
          margin-top: -74px;
          margin-bottom: 20px;
          background-color: #f5f5f5;
          border: 1px solid #e3e3e3;
          border-radius: 4px;
          -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,0.05);
          box-shadow: inset 0 1px 1px rgba(0,0,0,0.05);
        }
        .well_two {
          min-height: 20px;
          padding: 19px;
          margin-top: -150px;
          margin-bottom: 20px;
          background-color: #f5f5f5;
          border: 1px solid #e3e3e3;
          border-radius: 4px;
          -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,0.05);
          box-shadow: inset 0 1px 1px rgba(0,0,0,0.05);
        }
        .well_three {
          min-height: 20px;
          padding: 19px;
          margin-top: -225px;
          margin-bottom: 20px;
          background-color: #f5f5f5;
          border: 1px solid #e3e3e3;
          border-radius: 4px;
          -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,0.05);
          box-shadow: inset 0 1px 1px rgba(0,0,0,0.05);
        }
    </style>
</head>
<body>
<div class="container">

  <!-- NAME AND EMAIL AT THE TOP -->
  <div class="page-header text-center">

      <h1><%= user.firstName %> <%= user.lastName %></h1>

      <% if (user.local.email) { %>
          <p><%= user.local.email %><br></p>
      <% } %>
      <a href="/createItem" class="btn btn-default"><span class="fa fa-user"></span> Post Item</a>
  </div>

<% for(var i = 0; i<items.length; ++i){ %>
      <div class="row">
        <!-- item -->
        <div class="col-sm-6">
            <div class="well">
              <h3><%= items[i].title %></h3>
              <ul>
                <li><%= items[i].match.keyword1.original %></li>
                <li><%= items[i].match.keyword2.original %></li>
                <li><%= items[i].match.keyword3.original %></li>
            </div>
          </div>
            <div class="col-sm-6">
                <div class="well">
                    <h3 class="text-primary"> Item #1</h3>
                        <a href="/user/page" class="btn btn-primary">Connect</a>
                </div>
            </div>
          </div>
        <% } %>
    <!-- LOGOUT BUTTON -->
    <div class="page-header text-center">
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

</div>
</body>
</html>
